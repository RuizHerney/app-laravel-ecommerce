body
    background-color #f6f6f6
    font-size 14px
    margin: 0px;

.box 
    background-color #fff
    border-radius 8px
    border 1px solid #d6d6d6
    position absolute
    width 500px
    .btn-success
        background-color #F83009
        border 0
    .form-control
        &:focus
        &:active
            outline none
            box-shadow none
    .inside
        padding 16px
    .header
        background-color #26D1FB
        border-radius 8px 8px 0px 0px
        padding 16px
        a
            img
                display block
                margin 0px auto
                width 25%
    .footer
        a 
            display block
            font-size .9em
            &:last-child
                margin-top 5px
.box_login
    left calc(50% - 250px)
    top calc(50% - 240px)
    
.box_register
    left calc(50% - 250px)
    top calc(50% - 300)