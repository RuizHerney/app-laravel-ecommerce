body
    background-color #f5f6fa
    font-size 14px
    margin 0px
    padding 0px
    font-family: 'Roboto', sans-serif

.wrapper
        min-height 100vh
        overflow hidden
        .col1
            float left  
            position relative
            z-index 999
            width 20%
        .col2
            float left
            width 80%
.sidebar
    background-color #fff
    min-height 100vh
    .section-top
        background-color #2caaff
        box-shadow 0 0.5rem 1rem rgba(0, 0, 0, 0.15)
        .logo
            display block
            margin 0px auto
            padding-top 24px
            width 60%
            img
                display block
                margin 0px auto
                width 30%
        .user
            color #fff
            padding 16px
            a
                padding-left 0.5em
                color #fff
                font-size 1em
    .main
        margin-top 10px
        ul
            padding 0
            li
                margin-bottom 4px
                list-style none
                a
                    color: #8998AC
                    display block
                    font-size 1.1em
                    padding 12px 0px
                    text-decoration none
                    svg
                        margin 0px 20px
                    &:hover
                        background-color #2caaff
                        box-shadow 0 0.5rem 1rem rgba(0, 0, 0, 0.15)
                        color #fff
                        text-decoration none

.navbar
        background-color #2caaff
        a
            color: #fff
.page
    padding 16px
    margin-bottom 16px
    .breadcrumb
        background-color #ffffff
        box-shadow 0 0.5rem 1rem rgba(0, 0, 0, 0.10)
        .breadcrumb-item
            a
                text-decoration none
    .panel
        background-color #fff
        border-radius 6px
        border-bottom 1.5px solid #2caaff
        width 100%
        .header
            border-bottom 1px solid black
            h2.title
                margin-bottom  0px
                display inline-block
                color #19213d
                font-size 1.1em
                padding 12px 16px
        .inside
            padding 16px

.btn-accion
    display flex
    width 40px
    height 30px

